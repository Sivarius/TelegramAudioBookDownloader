# Telegram API credentials from https://my.telegram.org
API_ID=123456
API_HASH=your_api_hash
PHONE=+10000000000

# Public channel username or numeric ID
# Examples: @my_books_channel OR -1001234567890
CHANNEL_ID=@example_channel

# Optional defaults
DOWNLOAD_DIR=downloads
SESSION_NAME=user_session
STARTUP_SCAN_LIMIT=200
DOWNLOAD_CONCURRENCY=3

# Optional MTProxy
USE_MTPROXY=0
MTPROXY_LINK=server=example.com&port=443&secret=your_proxy_secret

# Optional SFTP upload
USE_SFTP=0
SFTP_HOST=sftp.example.com
SFTP_PORT=22
SFTP_USERNAME=username
SFTP_PASSWORD=password
SFTP_REMOTE_DIR=/uploads/books
CLEANUP_LOCAL_AFTER_SFTP=0

# Optional FTPS upload (FTP over TLS)
USE_FTPS=0
FTPS_HOST=ftps.example.com
FTPS_PORT=21
FTPS_USERNAME=username
FTPS_PASSWORD=password
FTPS_REMOTE_DIR=/uploads/books
FTPS_ENCODING=auto
FTPS_VERIFY_TLS=1
FTPS_PASSIVE_MODE=1
FTPS_SECURITY_MODE=explicit
FTPS_UPLOAD_CONCURRENCY=2
CLEANUP_LOCAL_AFTER_FTPS=0

# Optional periodic checks interval in seconds (default 7200 = 2h)
AUTO_CHECK_INTERVAL_SECONDS=7200
